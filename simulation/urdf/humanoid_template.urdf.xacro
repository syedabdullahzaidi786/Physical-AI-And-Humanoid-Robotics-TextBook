<?xml version="1.0"?>
<robot name="humanoid_template" xmlns:xacro="http://ros.org/wiki/xacro">
  <!-- Minimal humanoid template: base_link, torso, head, two legs -->

  <link name="base_link">
    <inertial>
      <mass value="10.0"/>
      <origin xyz="0 0 0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.3 0.2 0.1" />
      </geometry>
      <material name="gray"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.3 0.2 0.1" />
      </geometry>
    </collision>
  </link>

  <link name="torso"/>
  <joint name="base_to_torso" type="fixed">
    <parent link="base_link"/>
    <child link="torso"/>
    <origin xyz="0 0 0.5" rpy="0 0 0"/>
  </joint>

  <link name="head"/>
  <joint name="torso_to_head" type="revolute">
    <parent link="torso"/>
    <child link="head"/>
    <origin xyz="0 0 0.25" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="5" velocity="1.0"/>
  </joint>

  <!-- Left leg -->
  <link name="left_upper_leg"/>
  <joint name="torso_to_left_upper_leg" type="revolute">
    <parent link="torso"/>
    <child link="left_upper_leg"/>
    <origin xyz="0.05 0.08 -0.3" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-1.2" upper="1.2" effort="50" velocity="2.0"/>
  </joint>
  <link name="left_lower_leg"/>
  <joint name="left_knee" type="revolute">
    <parent link="left_upper_leg"/>
    <child link="left_lower_leg"/>
    <origin xyz="0 0 -0.3" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="0" upper="2.0" effort="50" velocity="2.0"/>
  </joint>

  <!-- Right leg -->
  <link name="right_upper_leg"/>
  <joint name="torso_to_right_upper_leg" type="revolute">
    <parent link="torso"/>
    <child link="right_upper_leg"/>
    <origin xyz="-0.05 0.08 -0.3" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-1.2" upper="1.2" effort="50" velocity="2.0"/>
  </joint>
  <link name="right_lower_leg"/>
  <joint name="right_knee" type="revolute">
    <parent link="right_upper_leg"/>
    <child link="right_lower_leg"/>
    <origin xyz="0 0 -0.3" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="0" upper="2.0" effort="50" velocity="2.0"/>
  </joint>

  <!-- Simple sensors placeholder -->
  <gazebo reference="head">
    <sensor type="camera" name="head_camera">
      <always_on>true</always_on>
      <visualize>false</visualize>
    </sensor>
  </gazebo>

</robot>
